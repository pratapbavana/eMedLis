
@{
    ViewBag.Title = "Sub Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    @Scripts.Render("~/App_Assets/js/SubDepartment/SubDepartment.js")
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header justify-content-between align-items-center">

                <div class="col col-sm-10">
                    <h3 class="card-title text-lg font-weight-bold">
                        <i class="fas fa-sitemap mr-2 text-primary"></i>Sub Department Master
                    </h3>
                </div>
                <div class="col col-sm-2 offset-sm-10 text-sm-right">
                    <button type="button" class="btn btn-blue btn-sm" data-toggle="modal" onclick="return clearfields()" data-target="#sub_dept_modal">
                        Add
                    </button>
                </div>

            </div>
            <div class="card-body">
                <table class="table table-sm table-bordered table-striped nowrap" style="width:100%" id="subdepttable">
                    <thead>
                        <tr>
                            <th>Serial</th>
                            <th>Id</th>
                            <th data-priority="1">Sub Department Name</th>
                            <th>Department Name</th>
                            <th>Active</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="sub_dept_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 id="header" class="modal-title">Create Sub Department</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form>
                    <!-- ID (Hidden) -->
                    <input type="hidden" id="Id" name="subdepartmentId" value="123">

                    <!--Sub Department Name -->
                    <div class="form-group">
                        <label for="SubDeptName">Sub Department Name</label>
                        <input type="text" class="form-control validate" id="SubDeptName" name="subdepartmentName">
                    </div>

                    <!--Department Name -->
                    <input type="hidden" id="DeptId">
                    <div class="form-group">
                        <label for="deptname">Department</label>
                        <select type="text" class="form-control deptsearch validate" id="deptname" name="departmentName"> </select>
                    </div>

                    <!-- Header -->
                    <div class="form-group">
                        <label for="Header">Header Name</label>
                        <input type="text" class="form-control validate" id="Header" name="Header">
                    </div>

                    <!-- Active (Check Box) -->

                    <div class="icheck-success d-inline">
                        <input type="checkbox" id="active1" name="active">
                        <label class="form-check-label" for="active1">Active</label>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button class="btn btn-blue" id="btnAdd" onclick="return Add();"> <span>Add Sub Department</span></button>
                <button class="btn btn-primary d-none" id="btnUpdate" onclick="return Update();">
                    <span>Update Sub Department</span>
                </button>
            </div>
        </div>
    </div>
</div>