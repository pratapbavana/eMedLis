
@{
    ViewBag.Title = "Specimen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts{
    @Scripts.Render("~/app_assets/js/Specimen/Specimen.js")
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">

                <div class="col col-sm-10">
                    <h3 class="card-title">Specimen Master</h3>
                </div>
                <div class="col col-sm-2 offset-sm-10 text-sm-right">
                    <button type="button" class="btn btn-blue btn-sm" data-toggle="modal" onclick="return clearfields()" data-target="#specimen_modal">
                        Add
                    </button>
                </div>

            </div>
            <div class="card-body">
                <table class="table table-sm table-bordered table-striped nowrap" style="width:100%" id="specimentable">
                    <thead>
                        <tr>
                            <th>Serial</th>
                            <th>Id</th>
                            <th>Specimen Name</th>
                            @*<th>Description</th>*@
                            <th>Active</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="specimen_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 id="header" class="modal-title">Create Specimen</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form>
                    <!-- ID (Hidden) -->
                    <input type="hidden" id="Id" name="specimenId" value="specimen">

                    <!--Specimen Name -->
                    <div class="form-group">
                        <label for="SpecName">Specimen Name</label>
                        <input type="text" class="form-control validate" id="SpecName" name="specimenname">
                    </div>

                    <!-- Active (Check Box) -->

                    <div class="icheck-success d-inline">
                        <input type="checkbox" id="active1" name="active">
                        <label class="form-check-label" for="active1">Active</label>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button class="btn btn-blue" id="btnAdd" onclick="return Add();"> <span>Add Specimen</span></button>
                <button class="btn btn-primary d-none" id="btnUpdate" onclick="return Update();">
                    <span>Update Specimen</span>
                </button>
            </div>
        </div>
    </div>
</div>
